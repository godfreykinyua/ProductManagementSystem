@model ProductManagementSystem.Models.SIZE

@{
    ViewBag.Title = "Details";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark"> Size Details</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                        <li class="breadcrumb-item active">Details</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Size Details</h3>

                </div>
                <!-- /.card-header -->
                <div class="card-body">


                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                Size Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.SIZE_NAME)
                            </dd>


                        </dl>
                    </div>

                    <!-- ./col -->
                    <!-- /.row -->
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.SIZE_ID }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                </div>
            </div>



        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


